# OneDock Configuration File
# Copy this file to config.toml and modify according to your environment

[local]
# Server listen address
address = ":8801"
# Enable debug mode (shows detailed logs and stack traces)
debug = true

[swaggerui]
# Whether to show Swagger UI
show = true
# Protocol for Swagger UI
protocol = "http"
# Host for Swagger UI
host = "127.0.0.1"
# Address for Swagger UI (should match local.address)
address = ":8801"

[container]
# Prefix for container names (containers will be named: {prefix}-{service_name}-{instance_number})
prefix = "onedock"
# Starting port for internal container port allocation
internal_port_start = 30000
# Cache TTL in seconds for port mappings
cache_ttl = 300
# Load balancing strategy: "round_robin", "least_connections", "weighted"
load_balance_strategy = "round_robin"

# Optional: Redis cache configuration (uncomment to use Redis instead of memory cache)
# [redis]
# address = "localhost:6379"
# password = ""
# db = 0
# pool_size = 10

# Optional: Logging configuration
# [logging]
# level = "info"  # trace, debug, info, warn, error, fatal, panic
# format = "json"  # json, text
# file = "logs/onedock.log"
# max_size = 100  # MB
# max_backups = 3
# max_age = 28  # days

# Optional: Security configuration
# [security]
# api_key = "your-api-key-here"
# cors_origins = ["http://localhost:3000", "https://your-frontend.com"]
# rate_limit = 100  # requests per minute

# Optional: Docker configuration
# [docker]
# host = "unix:///var/run/docker.sock"
# api_version = "1.41"
# timeout = 30  # seconds